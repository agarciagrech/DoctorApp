<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="doctorapp.ShowSignalsController">
   <children>
      <TextField fx:id="txtFIlename" layoutX="14.0" layoutY="305.0" promptText="Signal Filename" />
      <Text layoutX="11.0" layoutY="133.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Introduce the medical card of the patient:" />
      <Button fx:id="backButton" layoutX="14.0" layoutY="17.0" mnemonicParsing="false" onAction="#back" text="Back " />
      <Button fx:id="consultPatients" layoutX="7.0" layoutY="157.0" mnemonicParsing="false" onAction="#showPatients" text="Consult Patients" />
      <TextField fx:id="txtMedCard" layoutX="121.0" layoutY="157.0" promptText="Medical card" />
      <Text layoutX="21.0" layoutY="242.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Introduce the name of the signal:" />
      <Button fx:id="consultFilenames" layoutX="54.0" layoutY="258.0" mnemonicParsing="false" onAction="#showFilenames" text="Consult Filenames " />
      <Button fx:id="showButton" layoutX="170.0" layoutY="305.0" mnemonicParsing="false" onAction="#showSignal" text="Select signal" />
      <Button fx:id="exitButton" layoutX="915.0" layoutY="4.0" mnemonicParsing="false" onAction="#exitApp" text="Exit" />
      <Text layoutX="15.0" layoutY="432.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Now introduce the number of the section" />
      <TextField fx:id="SectionLabel" layoutX="22.0" layoutY="455.0" prefHeight="26.0" prefWidth="90.0" promptText="Section Num." />
      <Button fx:id="DisplayButton" layoutX="135.0" layoutY="456.0" mnemonicParsing="false" onAction="#Display" text="Display section" />
      <LineChart fx:id="Graph" layoutX="326.0" layoutY="71.0" prefHeight="494.0" prefWidth="646.0">
         <xAxis>
            <NumberAxis side="BOTTOM" tickLabelGap="1.0" upperBound="6000.0" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" tickLabelGap="1.0" upperBound="1000.0" />
         </yAxis>
      </LineChart>
   </children>
</AnchorPane>
